<?xml version="1.0"?>
<Template>
	<TemplateConfiguration>
		<_Name>Single View Application</_Name>
		<_Category>F#/iOS/Universal</_Category>
		<Icon>md-project-iphone</Icon>
		<LanguageName>F#</LanguageName>
		<_Description>Single view application project for iPhone and iPad.</_Description>
	</TemplateConfiguration>
	
	<Actions>
		<Open filename = "AppDelegate.fs"/>
	</Actions>
	
	<Combine name = "${ProjectName}" directory = ".">
		<Options>
			<StartupProject>${ProjectName}</StartupProject>
		</Options>
		
		<Project name = "${ProjectName}" directory = "." type = "IPhone">
			<References>
				<Reference type="Gac" refto="System, Version=2.0.5.0, Culture=neutral, PublicKeyToken=7cec85d7bea7798e" />
				<Reference type="Gac" refto="System.Xml, Version=2.0.5.0, Culture=neutral, PublicKeyToken=7cec85d7bea7798e" />
				<Reference type="Gac" refto="System.Core, Version=2.0.5.0, Culture=neutral, PublicKeyToken=7cec85d7bea7798e" />
				<Reference type="Gac" refto="monotouch" />
			</References>
			<Files>
				<Directory name="Resources" />
				<File name="Info.plist" AddStandardHeader="False" src="../Common/Info_Universal.plist.xml" />
				<File name="Entitlements.plist" AddStandardHeader="False" src="../Common/Entitlements.plist.xml" />
				<File name="${SafeProjectName}ViewController.fs" AddStandardHeader="True" src="Universal/ViewController.fs" />
				<File name="AppDelegate.fs" AddStandardHeader="True" src="Common/AppDelegate.fs" />
			</Files>
		</Project>
	</Combine>
</Template>
